#! /usr/bin/env bash
set -eu

# override home variable, if needed
#export HOME="${HOME}"
export HOME="$HOME/home"

# my configuration install location
export MY_CONFIG_INSTALL_LOCATION="$HOME/.my-config"

# Custom workrelated scripts
export WORKSPACE="$HOME/workspace"

# Vim configuration files
export VIMRC="$HOME/.vimrc"
export VIM_CONFIG_FILES="$HOME/.vim/config"
export VUNDLE_CONFIG_FILES="$VIM_CONFIG_FILES/Vundle"
export VUNDLERC_BASE_FILE="$VUNDLE_CONFIG_FILES/vundlerc.base"
export VUNDLERC_FILE="$VUNDLE_CONFIG_FILES/vundlerc"

# Vim Vundle installation location
export VUNDLE_INSTALL="$HOME/.vim/bundle/Vundle.vim"

# Tmux configuration files
export TMUX_CONFIG_FILES="$HOME/.tmux"
export TPM_PLUGINS="$HOME/.tmux/plugins"
export TPM_INSTALL="$TPM_PLUGINS/tpm"
export TMUXRC="$HOME/.tmux.conf"

# Update System Path
export PATH="$PATH:$HOME/bin"
